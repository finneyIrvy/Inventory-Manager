<h5 class="mb-3" style="font-family: 'Raleway', sans-serif; color: #FF6F00;">Stock Movements</h5>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>From</th>
                <th>To</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movement in Model)
            {
                <tr>
                    <td>@movement.MovementDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@movement.MovementType</td>
                    <td>@movement.QuantityChanged</td>
                    <td>@movement.SourceLocation</td>
                    <td>@movement.DestinationLocation</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="d-flex flex-column justify-content-center align-items-center" style="height: 60vh; border: 1px solid #ccc; border-radius: 10px; padding: 20px;">
        <i class="fas fa-folder-plus" style="font-size: 8rem; color: #008080;"></i>
        <p class="mt-3" style="font-family: 'Raleway', sans-serif; color: #FF6F00;">No stockMovements yet</p>
    </div>
}
