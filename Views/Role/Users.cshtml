@model IEnumerable<NewUserClass>

<div class="row justify-content-lg-around">
    <div class="col-md-12" style="padding: 20px; transform: scale(0.90); transform-origin: top center">
        <h5>System Profiles</h5>

        <a class="btn btn-success btn-sm mb-3" asp-area="" asp-controller="Role" asp-action="RoleUser">Assign-Role</a>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }

        <table class="table">
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Username</th>
                    <td>Gender</td>
                    <th>Roles</th> <!-- Added column for roles -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>@user.Gender</td>
                        <td>
                            <!-- Display the roles for each user -->
                            @if (ViewBag.UserRoles != null && ViewBag.UserRoles.ContainsKey(user.Id))
                            {
                                var roles = ViewBag.UserRoles[user.Id];
                                <span>@string.Join(", ", roles)</span> <!-- Display roles as comma separated list -->
                            }
                        </td>
                        <td>
                            <!-- Example Actions: Edit, Delete, Assign Role -->
                            <a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>

                            <form method="post" action="@Url.Action("DeleteUser")" style="display:inline;">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
