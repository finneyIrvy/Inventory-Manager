@model IEnumerable<NewUserClass>

@{
    ViewBag.Title = "Assign Role";
}

<div class="container">
    <div class="row justify-content-lg-start">
        <div class="col-md-12" style="padding: 20px; transform: scale(0.90); transform-origin: top center">

            <h5>Assign Role to Profiles</h5>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info col-md-4 col-lg-4">
                    @TempData["Message"]
                </div>
            }

            <form method="post" action="@Url.Action("AssignRole", "Role")">
                @Html.AntiForgeryToken() <!-- CSRF Token -->
                <!-- Select Role Section -->
                <div class="form-group col-sm-12 col-lg-4">
                    <label for="roleName">Role</label>
                    <select name="roleName" id="roleName" class="form-control" required>
                        <option value="">-- Select Role --</option>
                        @foreach (var role in ViewBag.Roles as List<string>)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>

                <!-- Profile Section -->
                <div class="form-group col-sm-12 ">
                    <label>Profiles</label>

                    @foreach (var user in Model)
                    {
                        <div class="form-check">
                            <!-- Updated name for checkbox binding -->
                            <input type="checkbox" name="selectedUsers[]" value="@user.Id" class="form-check-input" id="user_@user.Id" />

                            <label class="form-check-label" for="user_@user.Id">
                                @user.UserName (@user.Email)
                            </label>
                        </div>
                    }
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>

                    <a href="@Url.Action("Users")" class="btn btn-secondary btn-sm">Cancel</a>
                </div>

            </form>

        </div>
    </div>
</div>
